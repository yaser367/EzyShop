    <script>
        function addCoupon(){
            console.log("first")
            const couponName = document.getElementById('couponName').value
            const discount = document.getElementById('discount').value
            const minimum = document.getElementById('minimum').value
            const maximum = document.getElementById('maximum').value
            const expiry = document.getElementById('expiry').value
            const couponCode = document.getElementById('couponCode').value



            
               fetch('/admin/coupon/add',{
                method:"POST",
                headers:{
                    'content-type':'application/json'
                },
                body:JSON.stringify({couponName,discount,minimum,maximum,expiry,couponCode})
               }).then(res=>res.json()).then(data=>{
                if(data.empty === true){
                    Swal.fire({
                      icon: 'error',
                      title: 'Oops...',
                      text: 'field should not be empty!'
                      
                    })
                }if(data.percetage === false){
                    Swal.fire({
                      icon: 'error',
                      title: 'Oops...',
                      text: 'Text number less than 100!'
                      
                    })
                }if(data.success === true){
                    Swal.fire({
                      position: 'top-middle',
                      icon: 'success',
                      title: 'Coupon Saved Successfully',
                      showConfirmButton: false,
                      timer: 1500
                    })
                }
               })
        }
